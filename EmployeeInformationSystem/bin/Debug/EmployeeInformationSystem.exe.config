<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
	</configSections>

	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
	</startup>

	<!-- Include log4net configuration -->
	<log4net>
		<root>
			<level value="ALL" />
			<appender-ref ref="AppendConfig" />
		</root>
		<appender name="AppendConfig" type="log4net.Appender.FileAppender,log4net">
			<file value="C:\inetpub\wwwroot\LogFile.txt" />
			<appendToFile value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="---------%newline Date:%date %newline Type:%level %newline App:%logger %newline Message:%message %newline %newline" />
			</layout>
		</appender>
	</log4net>

	<appSettings>
		<add key="employeedetailsfile" value="C:\inetpub\wwwroot\EmployeeDetails.txt" />
	</appSettings>
</configuration>
