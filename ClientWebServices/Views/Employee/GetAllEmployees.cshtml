@model List<ClientWebServices.Models.Employee>

<!DOCTYPE html>
<html>
<head>
    <title>Employee Data</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>

    <h2>Employee Data</h2>

    @if (Model != null && Model.Any())
    {
        <table>
            <tr>
                <th>Employee ID</th>
                <th>Name</th>
                <th>Salary</th>
                <th>Edit</th>
                <th>Delete</th>
                <th>View</th>
            </tr>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeID</td>
                    <td>@employee.EmployeeName</td>
                    <td>@employee.EmployeeSalary</td>
                    <td><button onclick="editEmployee('@employee.EmployeeID')">Edit</button></td>
                    <td><button onclick="deleteEmployee('@employee.EmployeeID')">Delete</button></td>
                    <td><button onclick="viewEmployee('@employee.EmployeeID')">View</button></td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No employees found.</p>
    }

    <script>
        function editEmployee(employeeID) {
            // Redirect to the UpdateEmployee action with the employee ID as parameter
            window.location.href = "/Employee/UpdateEmployeeForm";
        }

        function deleteEmployee(employeeID) {
            // Redirect to the DeleteEmployee action with the employee ID as parameter
            window.location.href = "/Employee/DeleteEmployee?id=" + employeeID;
        }

        function viewEmployee(employeeID) {
            // Redirect to the GetEmployeeById action with the employee ID as parameter
            window.location.href = "/Employee/GetEmployeeById?id=" + employeeID;
        }
    </script>


</body>
</html>
