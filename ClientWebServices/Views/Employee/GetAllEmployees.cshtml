@model IEnumerable<ClientWebServices.Models.ViewModelEmployee>

<!DOCTYPE html>
<html>
<head>
    <title>Employee Data</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

       
        .link-hover:hover {
            color: red;
        }
    </style>
</head>
<body>

    <h2>Employee Data</h2>

    @if (Model != null && Model.Any())
    {
        <table>
            <tr>
                <th>Employee ID</th>
                <th>Name</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeID</td>
                    <td>@employee.EmployeeName</td>
                    <td>@employee.EmployeeSalary</td>
                    <td>
                        <!-- Add class 'link-hover' to the links -->
                        <a href="/Employee/UpdateEmployeeForm?id=@employee.EmployeeID" class="link-hover">Edit</a> |
                        <a href="/Employee/DeleteEmployee?id=@employee.EmployeeID" class="link-hover">Delete</a> |
                        <a href="/Employee/GetEmployeeById?id=@employee.EmployeeID" class="link-hover">View</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No employees found.</p>
    }

    <!-- Include jQuery library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        // jQuery to add class 'link-hover' on hover
        $(document).ready(function() {
            $('.link-hover').hover(function() {
                $(this).addClass('link-hover');
            }, function() {
                $(this).removeClass('link-hover');
            });
        });
    </script>

</body>
</html>
